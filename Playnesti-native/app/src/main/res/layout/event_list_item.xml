<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/event_image"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/event_image_width"
        android:layout_height="@dimen/event_image_height"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/event_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do evento"
            style="?android:textAppearanceMedium"
            />

        <TextView
            android:id="@+id/event_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de evento"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/event_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora"
            />

        <TextView
            android:id="@+id/event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local"
            />
    </LinearLayout>

</RelativeLayout>